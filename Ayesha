#include <iostream>
#include <string>
using namespace std;

int singleroomprice = 4000;
int doubleroomprice = 8000;
int suiteroomprice = 16000;

int maxsinglerooms = 10;
int maxdoublerooms = 5;
int maxsuiterooms = 2;


int availableRooms[3] = {maxsinglerooms, maxdoublerooms, maxsuiterooms};
string customers[100];         
int bookingHistory[100][3];   
int totalCustomers = 0;

void checkAvailability() {
    cout << "\nRoom Availability:"<<endl;
    cout << "1. Single Rooms: " << availableRooms[0] << " available"<<endl;
    cout << "2. Double Rooms: " << availableRooms[1] << " available"<<endl;
    cout << "3. Suite Rooms: " << availableRooms[2] << " available"<<endl;
}

void bookRoom() {
    string name;
    int roomType, nights;

    cout << "Enter your name (one word only): ";
    cin >> name;

    // Choose room type
    do {
        cout << "Enter room type (1 for Single, 2 for Double, 3 for Suite): ";
        cin >> roomType;

        if (roomType < 1 || roomType > 3) {
            cout << "Invalid room type. Please try again.\n";
        } else if (availableRooms[roomType - 1] <= 0) {
            cout << "Sorry, no rooms available in this category. Choose another room type.\n";
            roomType = -1;  // Force another iteration
        }
    } while (roomType < 1 || roomType > 3);

    cout << "Enter number of nights: "<<endl;
    cin >> nights;

   
